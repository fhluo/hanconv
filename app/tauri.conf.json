{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hanconv",
  "version": "0.4.2",
  "identifier": "hanconv",
  "build": {
    "beforeDevCommand": "task web:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "task web:build",
    "frontendDist": "../web/dist"
  },
  "app": {
    "security": {
      "capabilities": ["default"]
    },
    "windows": [
      {
        "label": "main",
        "title": "hanconv",
        "width": 800,
        "height": 600,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
